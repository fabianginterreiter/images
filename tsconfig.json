{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
        "*": [
            "node_modules/@types/*",
            "src/types/*"
        ]
    },
    "strict": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/client",
    "src/public",
    "src/scss"
  ]
}
